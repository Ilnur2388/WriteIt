<% currently_at %>
<%= form_with model: @user, local: true, multipart: true do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :Регион %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :city, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :Имя %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :Фамилия %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :family_name, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :Пароль %>
    </div>

    <div class="col-sm-10">
      <%= f.password_field :password, class: 'form-control form-control-lg' %>
    </div>
  </div>


  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :Подтверждение %>
    </div>

    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="field mb-3">
    <div class="col-sm-2 col-form-label">
      <%= f.label :avatar, "Фото профиля" %>
    </div>

    <div class="col-sm-5">
      <%= f.file_field :avatar, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <%= f.submit (@user.new_record? ? "Зарегистрироваться" : "Сохранить") , class: 'btn btn-primary' %>
<% end %>
